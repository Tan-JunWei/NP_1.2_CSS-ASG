'use client'; 

import React, { useEffect, useState } from "react";

const images = [
  "/images/404_lost.png", // Replace with actual image paths
  "/images/404_dog.png",
  "/images/404_cat.png",
  "/images/404_error.png",
  "/images/404_funny.png",
];

export default function NotFound() {
  const [randomImage, setRandomImage] = useState("");

  useEffect(() => {
    // Generate a random image every time the page loads
    const image = images[Math.floor(Math.random() * images.length)];
    setRandomImage(image);
  }, []);

  return (
    <div style={{ textAlign: "center", marginTop: "100px", padding: "20px" }}>
      <h1 style={{ fontSize: "3rem", color: "#67369F" }}>404 - Page Not Found</h1>
      {randomImage && (
        <img 
          src={randomImage} 
          alt="404" 
          style={{ maxWidth: "50%", height: "auto", marginBottom: "20px" }}
        />
      )}
      <button 
        style={{ 
          marginTop: "20px", 
          padding: "10px 20px", 
          fontSize: "1rem", 
          backgroundColor: "blue", 
          color: "white", 
          border: "none", 
          borderRadius: "5px", 
          cursor: "pointer" 
        }}
        onClick={() => window.location.href = "/"}
      >
        Back to Home
      </button>
    </div>
  );
}
